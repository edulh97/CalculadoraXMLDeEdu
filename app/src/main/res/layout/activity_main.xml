<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <EditText android:id="@+id/number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/num1suma"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"
            android:padding="20dp" />

        <EditText android:id="@+id/number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/num2suma"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"
            android:padding="20dp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:shadowColor="@color/black"
            android:text="@string/txtButton" />

        <TextView
            android:id="@+id/resultSuma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtResultado"
            android:textSize="25sp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>